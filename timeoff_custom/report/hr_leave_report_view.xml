<?xml version="1.0"?>
<odoo>

    <record id="hr_leave_report_used_tree" model="ir.ui.view">
        <field name="name">hr.leave.report.used.tree</field>
        <field name="model">hr.leave.report.used</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="name"/>
                <field name="annual_leave"/>
                <field name="replacement_day_off"/>
                <field name="sick"/>
                <field name="unpaid_leave"/>
            </tree>
        </field>
    </record>

    <record id="hr_leave_report_balance_tree" model="ir.ui.view">
        <field name="name">hr.leave.report.balance.tree</field>
        <field name="model">hr.leave.report.balance</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="name"/>
                <field name="annual_leave"/>
                <field name="replacement_day_off"/>
                <field name="sick"/>
                <field name="unpaid_leave"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_leave_report_used_tree" model="ir.actions.act_window">
        <field name="name">Used Timeoff</field>
        <field name="res_model">hr.leave.report.used</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="action_hr_leave_report_balance_tree" model="ir.actions.act_window">
        <field name="name">Balance Timeoff</field>
        <field name="res_model">hr.leave.report.balance</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem
        id="hr_leave_report_used_menu"
        action="action_hr_leave_report_used_tree"
        parent="hr_holidays.menu_hr_holidays_report"/>

    <menuitem
        id="hr_leave_report_balance_menu"
        action="action_hr_leave_report_balance_tree"
        parent="hr_holidays.menu_hr_holidays_report"/>

</odoo>
