<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_leave_views_inherit_view_form" model="ir.ui.view">
        <field name="name">hr.leave.view.form.custom</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='holiday_type']" position="after">
                <field name="button_can_approve_or_reject" invisible="1" readonly="1"></field>
            </xpath>
            <xpath expr="//button[@name='action_approve']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('state', '!=', 'confirm'), ('button_can_approve_or_reject', '!=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_refuse']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('state', '!=', 'confirm'), ('button_can_approve_or_reject', '!=', True)]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
