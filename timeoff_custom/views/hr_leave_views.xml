<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_leave_views_inherit_view_form" model="ir.ui.view">
        <field name="name">hr.leave.view.form.custom</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='holiday_type']" position="after">
                <field name="current_user" invisible="1" readonly="1"></field>
            </xpath>
            <xpath expr="//button[@name='action_validate']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', ('state', '!=', 'validate1'), ('current_user', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_approve']" position="attributes">
                <attribute name="attrs">{'invisible': ['|', '|', '|', ('state', '!=', 'confirm'), ('current_user', '=', True), ('active', '=', False), ('can_approve', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_refuse']" position="replace">
                <button string="Refuse" name="%(hr_leave_refuse_leave_wizard_action)d" type="action" attrs="{'invisible': ['|', '|', '|', ('state', 'not in', ('confirm','validate1','validate')), ('current_user', '=', True), ('active', '=', False), ('can_approve', '=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
