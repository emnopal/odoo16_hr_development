<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <template id="hr_leave_template_refuse_reason">
            <p>Your <t t-esc="leave_type"/> planned on <t t-esc="date"/> has been refused</p>
            <ul class="o_timeline_tracking_value_list">
                <li>Reason : <t t-esc="reason"/></li>
            </ul>
        </template>

        <template id="hr_allocation_template_refuse_reason">
            <p>Your allocation for <t t-esc="leave_type"/> has been refused</p>
            <ul class="o_timeline_tracking_value_list">
                <li>Reason : <t t-esc="reason"/></li>
            </ul>
        </template>

    </data>
</odoo>
